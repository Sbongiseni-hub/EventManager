<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddEventServlet</servlet-name>
        <servlet-class>za.ac.tut.web.AddEventServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewAllServlet</servlet-name>
        <servlet-class>za.ac.tut.web.viewAllServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>startViewServlet</servlet-name>
        <servlet-class>za.ac.tut.web.startViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteEventServlet</servlet-name>
        <servlet-class>za.ac.tut.web.deleteEventServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddEventServlet</servlet-name>
        <url-pattern>/AddEventServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewAllServlet</servlet-name>
        <url-pattern>/viewAllServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>startViewServlet</servlet-name>
        <url-pattern>/startViewServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteEventServlet</servlet-name>
        <url-pattern>/deleteEventServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
